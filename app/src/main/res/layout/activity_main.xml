<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
                android:id="@+id/exchangeImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src = "@drawable/exchangeicon"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
        />

    <EditText
            android:id="@+id/leftValueEditText"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_toStartOf="@+id/exchangeImageView"
            android:layout_alignBottom="@+id/exchangeImageView"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="0dp"/>

    <EditText
            android:id="@+id/rightValueEditText"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/exchangeImageView"
            android:layout_alignBottom="@+id/exchangeImageView"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="0dp"/>

    <Spinner
            android:id="@+id/leftValuesSpinner"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/leftValueEditText"
            android:layout_above="@+id/leftValueEditText"
            android:layout_marginBottom="25dp">

    </Spinner>

    <Spinner
            android:id="@+id/rightValuesSpinner"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rightValueEditText"
            android:layout_above="@+id/rightValueEditText"
            android:layout_marginBottom="25dp">

    </Spinner>

</RelativeLayout>